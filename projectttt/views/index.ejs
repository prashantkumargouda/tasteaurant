<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script> 
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="forms p-10 text-white" >
            <form action="/create" method="post">
                <input class="block w-full rounded-md outline-none px-3 py-2 bg-zinc-800" type="text" placeholder="Input name here.." name="title"> 
                <textarea class="block w-full px-3 py-2 rounded-md outline-none resize-none mt-2 bg-zinc-800" placeholder="Input details here" name="data"></textarea>
                <input class="px-4 py-3 rounded-md bg-blue-800 mt-4" type="submit" value="Create task">
            </form>
        </div>

        <div class="tasks flex gap-3 flex-wrap p-10">
            <% if(files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class ="text-white tracking - tighter text-[24px]"><%= val%></h1>
                        <div class="flex justify-between mt-2 ">
                            <a class="text-blue-500 inline-block wt-full items-center" href="/file/<%= val%>">Read More....</a>
                            <a class="text-zinc-500" href="/edit/<%= val %>">edit filename</a>
                        </div>
                    </div>
                <% }) %> 
            <% } else { %>
                <h3 class="text-zinc-600">No tasks yet</h3>
            <% } %>
        </div>
    </div>
</body>
</html>